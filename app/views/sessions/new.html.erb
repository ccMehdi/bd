

<div class="login-body">
    <article class="container-login center-block">
		<section>
            <ul id="top-bar" class="nav nav-tabs nav-justified">
				<li class="active"><a data-toggle="tab" href="#login-access">Login</a></li>
				<li><a data-toggle="tab" href="#reset-password">Lost Password</a></li>
			</ul>
			<div class="tab-content tabs-login col-lg-12 col-md-12 col-sm-12 cols-xs-12">
				<div id="login-access" class="tab-pane fade in active"><br>
                    <div class="text-center">
                        <%= link_to image_tag('beaverdrive-logo.png', :border => 0) %>
                        <br><br>
                    </div>
					<%= form_tag sessions_path do %>
                        <div class="form-group">
                          <%= text_field_tag :username, '', class: 'form-control', placeholder: 'Username' %>
                        </div>
                                    <div class="form-group ">
                                        <%= password_field_tag :password, '', class: 'form-control', placeholder: 'Password' %>
                                    </div>
                        <div class="form-group">
                          <%= submit_tag 'Login', class: 'btn btn-lg btn-primary' %>
                        </div>
                    <% end %>
				</div>
                <div id="reset-password" class="tab-pane fade">
                    <h2>Password reset</h2>
                </div>
            </div>
		</section>
	</article>
</div>
