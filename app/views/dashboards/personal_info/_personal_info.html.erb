<div id="personal_info" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h3 class="modal-title">Edit Your Account</h3>
      </div>
      <div class="modal-body">
        <div id="info_update_response"></div>
        <div class="row">
        <div class="col-md-6">
          <%= simple_form_for @user_info, url: user_infos_path, html: { method: :patch}, remote: true do |f| %>
              <p>
                <%= f.label :name %><br />
                <%= f.text_field :us_name %>
              </p>
              <p>
                <%= f.label :adress %><br />
                <%= f.text_field :us_adress %>
              </p>
              <p>
                <%= f.label :phone %><br />
                <%= f.text_field :us_phone %>
              </p>
              <br>
              <p><%= f.submit 'Update Info', remote: true, :disable_with=>'Loading...'%></p>
          <% end %>
        </div>
        </div>
      </div>
      <div class="modal-footer">

        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript" charset="utf-8">
    $(document).ready(function(){
      $('#personal_info').on('hidden.bs.modal', function (e) {
          location.reload();
      })
    });
</script>
